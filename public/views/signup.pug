doctype=html
html(language=en)
include includes/_head
body
    include includes/_navbar.pug
        div.container
            div.row
                form.signup-form.col-sm-12.col-lg-3.float-right
                    h4 Create New Account
                    div.form-group
                        div.input-group
                            span.input-group-addon
                                i.fa.fa-user
                            input.form-control.form-control-sm(type='text' name='firstName' id='firstName' placeholder='First Name')
                    div.form-group
                        div.input-group
                            span.input-group-addon
                                i.fa.fa-user
                            input.form-control.form-control-sm(type='text' name='lastName' id='lastName' placeholder='Last Name')
                    div.form-group
                        div.input-group
                            span.input-group-addon
                                i.fa.fa-envelope
                            input.form-control.form-control-sm(type='text' name='email' id='email' placeholder='Email')
                    div.form-group
                        div.input-group
                            span.input-group-addon
                                i.fa.fa-key
                            input.form-control.form-control-sm(type='password' name='password' id='password' placeholder='Password')
                    div.form-group
                        div.input-group
                            span.input-group-addon
                                i.fa.fa-key
                            input.form-control.form-control-sm(type='password' name='confirmPassword' id='confirmPassword' placeholder='Confirm Password')
                    div.container
                        div.row
                            button.btn.btn-outline-success(type='button' id='signUpBtn') Sign Up
                            button.btn.btn-outline-danger(type='button' id='clearBtn') Reset
            
    include includes/_modal