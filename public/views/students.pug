doctype=html
html(language=en)
include components/_head
body
    include components/_navbar.pug
    if messages
        div.alert.alert-warning.alert-dismissible.fade.show
            strong #{messages}
            button.close(type='button' data-dismiss='alert' aria-label='Close')
                span(aria-hidden='true') &times;
    div.container
        div.row
            div.card.students.col-sm-12.col-lg-3.float-right
                div.card-content
                    form.student-add-form(method='post' action='/student/add')
                        h4.d-flex.justify-content-center Add Student
                        div.form-group
                            div.input-group
                                span.input-group-addon
                                    i.input-group-text.fa.fa-user
                                input.form-control.form-control-sm(type='text' name='name' id='name' placeholder='Enter Name')
                        div.form-group
                            div.input-group
                                span.input-group-addon
                                    i.input-group-text.fa.fa-list
                                input.form-control.form-control-sm(type='text' name='course' id='course' placeholder='Enter Course')
                        div.form-group
                            div.input-group
                                span.input-group-addon
                                    i.input-group-text.fa.fa-graduation-cap
                                input.form-control.form-control-sm(type='text' name='grade' id='grade' placeholder='Enter Grade')
                        div.row.d-flex.justify-content-center
                            button.addButton.btn.btn-outline-success(type='submit' id='addBtn') Add Student

            div.col-12.col-lg-9.float-right
                table.table.table-hover.table-striped.table-bordered
                    thead.thead-dark
                        tr
                            td(scope='col') Name
                            td(scope='col') Course
                            td(scope='col') Grade
                            td(scope='col') Actions
                    each student in studentList
                        tr
                            td #{student.name}
                            td #{student.course}
                            td #{student.grade}
                            td
                                form(action='/student/remove/'+ student._id method='get')
                                    button.btn.btn-danger Delete

    include components/_modal